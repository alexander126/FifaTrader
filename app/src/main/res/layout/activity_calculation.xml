<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fifa_background_cc"
    android:layout_height="match_parent"
    tools:context="com.example.alex.fifatrader.calculation">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:gravity="center">
    <EditText
        android:id="@+id/nameinvi"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:gravity="center"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp">
    <EditText
        android:id="@+id/name"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:gravity="center">
    <EditText
        android:id="@+id/bought"
        android:layout_width="0dp"
        android:hint="Bought for"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:gravity="center"
        >
        <EditText
            android:id="@+id/sold"
            android:layout_width="0dp"
            android:hint="Sold for"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:gravity="center">
    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sold"
        android:text="Confirm"/>
        </LinearLayout>

</LinearLayout>

</android.support.constraint.ConstraintLayout>
