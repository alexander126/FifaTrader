<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fifa_background"
    android:layout_height="match_parent"
    tools:context="com.example.alex.fifatrader.tradeSession">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/footballName"
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/currentTax"
        android:text="Last item sold"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/profit"
        android:textSize="10pt"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profit"
        android:textColor="#ffffff"
        android:layout_below="@+id/tax"/>
    <TextView
        android:id="@+id/currentTax"
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/currentProfit"
        android:layout_centerHorizontal="true"
        android:text="Last trade tax :"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/currentProfit"
        android:textSize="10pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="Last trade profit :"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/tax"
        android:textSize="10pt"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tax"
        android:textColor="#ffffff"
        android:layout_below="@+id/currentProfit"/>
    <TextView
        android:id="@+id/tax2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_below="@+id/profit"/>
    <ImageButton
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView"
        android:layout_alignParentStart="true"
        android:src="@drawable/newentry"
        android:scaleType="fitCenter"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:adjustViewBounds="true"
        android:background="@null"/>
    <ImageView
        android:id="@+id/coins1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profit"
        android:layout_alignParentBottom="@+id/profit"
        android:layout_below="@id/tax"
        android:layout_above="@id/tax2"
        android:src="@drawable/fifacoins"/>
    <ImageView
        android:id="@+id/coins2"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/currentTax"
        android:layout_below="@id/footballName"
        android:layout_above="@id/currentProfit"
        android:src="@drawable/fifacoins"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/coins3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/currentProfit"
        android:layout_above="@id/tax"
        android:layout_below="@id/currentTax"
        android:src="@drawable/fifacoins"/>
    <ImageView
        android:id="@+id/coins4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tax"
        android:layout_below="@+id/currentProfit"
        android:layout_above="@+id/profit"
        android:src="@drawable/fifacoins"/>
    <ImageButton
        android:id="@+id/endSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/endsession"
        android:layout_above="@+id/adView"
        android:scaleType="fitCenter"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:adjustViewBounds="true"
        android:background="@null"/>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8629737007792498/3768555595">
    </com.google.android.gms.ads.AdView>
    </RelativeLayout>

</RelativeLayout>
