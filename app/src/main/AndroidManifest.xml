<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alex.fifatrader">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fifaicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".calculator"
            android:parentActivityName="com.example.alex.fifatrader.MainActivity" />
        <activity
            android:name=".TaxExplained"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".tradeSession"
            android:parentActivityName="com.example.alex.fifatrader.MainActivity"/>
        <activity android:name=".calculation" />
        <activity android:name=".cheapFifaCoins"
            android:parentActivityName="com.example.alex.fifatrader.MainActivity"/>
        <activity android:name=".aboutActivity"
            android:parentActivityName="com.example.alex.fifatrader.MainActivity"/>
        <activity android:name=".settings"
            android:parentActivityName="com.example.alex.fifatrader.MainActivity"></activity>
    </application>

</manifest>